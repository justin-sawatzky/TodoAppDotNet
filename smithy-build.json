{
  "version": "1.0",
  "sources": ["model"],
  "maven": {
    "dependencies": [
      "software.amazon.smithy:smithy-openapi:1.65.0",
      "software.amazon.smithy:smithy-aws-traits:1.65.0"
    ]
  },
  "plugins": {
    "openapi": {
      "service": "jsawatzky.todoapp#TodoAppDotNet",
      "protocol": "aws.protocols#restJson1",
      "version": "3.1.0",
      "jsonAdd": {
        "/info/title": "TodoApp API",
        "/info/description": "A REST API for managing TODO lists and tasks",
        "/info/version": "1.0.0",
        "/servers": [
          {
            "url": "http://localhost:80",
            "description": "Development server"
          }
        ]
      }
    }
  }
}